<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>
<body>
  <%- include('./partials/nav'); %>
  <h1>Posts:</h1>
  <% if (list.length > 0) { %>
  <ul>
    <% list.forEach(({id, title, excerpt, createdAt, author}) => { %>
      <li>
        <article>
          <h2>
            <a href="/posts/<%= id %>"><%= title %></a>
          </h2>
          <p><%= excerpt %></p>
          <div class="info">
            <span><%= createdAt.toLocaleDateString('ru') %></span>
            <span><%= author %></span>
          </div>
        </article>
      </li>
    <% }) %>
  </ul>
  <% } %>
</body>
</html>
